<%= content_for :page_title do %>
  Crie sua conta gratuitamente
<% end %>

<%= content_for :page_other_action do %>
  Já possui uma conta? <br> <%= link_to "Faça login agora mesmo.", new_user_session_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>
  <div class="form-group space-y-1">
    <%= f.label :email, "Informe seu email", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Ex. pedro@mail.com" %>
  </div>

  <div class="form-group space-y-1">
    <%= f.label :password, "Escolha uma senha", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "*********" %>
  </div>

  <div class="form-group space-y-1">
    <%= f.label :password_confirmation, "Confirme sua senha", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "*********" %>
  </div>

  <div class="form-group">
    <%= f.submit "Criar conta", class: "form-submit" %>
  </div>
<% end %>
